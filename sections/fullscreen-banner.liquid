{{ 'section-fullscreen-banner.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .fullscreen-banner-{{ section.id }} {
    --overlay-opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
    --overlay-color: {{ section.settings.overlay_color.rgb }};
    --content-color: {{ section.settings.content_color }};
    --content-max-width: {{ section.settings.content_width }}%;
    --content-alignment: {{ section.settings.content_alignment }};
    --content-vertical-alignment: {{ section.settings.content_vertical_alignment }};
    --text-alignment: {{ section.settings.text_alignment }};
    --button-spacing: {{ section.settings.button_spacing }}px;
    --button-1-background: {{ section.settings.button_1_background.rgb }};
    --button-1-text: {{ section.settings.button_1_text_color }};
    --button-2-background: {{ section.settings.button_2_background.rgb }};
    --button-2-text: {{ section.settings.button_2_text_color }};
    --section-height: {{ section.settings.section_height }}vh;
    --section-min-height: {{ section.settings.min_height }}px;
    
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .fullscreen-banner-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="fullscreen-banner fullscreen-banner-{{ section.id }} color-{{ section.settings.color_scheme }} gradient">
  <div class="fullscreen-banner__media">
    {%- if section.settings.video != blank -%}
      {{ section.settings.video | video_tag: autoplay: true, loop: true, muted: true, controls: false, class: 'fullscreen-banner__video' }}
    {%- elsif section.settings.image != blank -%}
      {{ section.settings.image | image_url: width: 3000 | image_tag:
        loading: 'lazy',
        width: section.settings.image.width,
        height: section.settings.image.height,
        sizes: '100vw',
        widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000',
        alt: section.settings.image.alt | escape,
        class: 'fullscreen-banner__image'
      }}
    {%- else -%}
      {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg fullscreen-banner__image' }}
    {%- endif -%}
    
    <div class="fullscreen-banner__overlay"></div>
  </div>
  
  <div class="fullscreen-banner__content page-width">
    <div class="fullscreen-banner__content-inner">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'subheading' -%}
            {%- if block.settings.text != blank -%}
              <p class="fullscreen-banner__subheading" {{ block.shopify_attributes }}>
                {{ block.settings.text | escape }}
              </p>
            {%- endif -%}
            
          {%- when 'heading' -%}
            {%- if block.settings.heading != blank -%}
              <h2 class="fullscreen-banner__heading {{ block.settings.heading_size }}" {{ block.shopify_attributes }}>
                {{ block.settings.heading | escape }}
              </h2>
            {%- endif -%}
            
          {%- when 'text' -%}
            {%- if block.settings.text != blank -%}
              <div class="fullscreen-banner__text rte" {{ block.shopify_attributes }}>
                {{ block.settings.text }}
              </div>
            {%- endif -%}
            
          {%- when 'buttons' -%}
            {%- if block.settings.button_label_1 != blank or block.settings.button_label_2 != blank -%}
              <div class="fullscreen-banner__buttons" {{ block.shopify_attributes }}>
                {%- if block.settings.button_label_1 != blank -%}
                  <a href="{{ block.settings.button_link_1 | default: '#' }}" class="button button--primary">
                    {{ block.settings.button_label_1 | escape }}
                  </a>
                {%- endif -%}
                
                {%- if block.settings.button_label_2 != blank -%}
                  <a href="{{ block.settings.button_link_2 | default: '#' }}" class="button button--secondary">
                    {{ block.settings.button_label_2 | escape }}
                  </a>
                {%- endif -%}
              </div>
            {%- endif -%}
            
          {%- when 'countdown' -%}
            {%- if block.settings.date != blank -%}
              <div class="fullscreen-banner__countdown" data-countdown-date="{{ block.settings.date }}" {{ block.shopify_attributes }}>
                <div class="countdown__item">
                  <span class="countdown__number" data-days>00</span>
                  <span class="countdown__label">Jours</span>
                </div>
                <div class="countdown__item">
                  <span class="countdown__number" data-hours>00</span>
                  <span class="countdown__label">Heures</span>
                </div>
                <div class="countdown__item">
                  <span class="countdown__number" data-minutes>00</span>
                  <span class="countdown__label">Minutes</span>
                </div>
                <div class="countdown__item">
                  <span class="countdown__number" data-seconds>00</span>
                  <span class="countdown__label">Secondes</span>
                </div>
              </div>
            {%- endif -%}
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
  
  {%- if section.settings.show_scroll_indicator -%}
    <div class="fullscreen-banner__scroll-indicator">
      <span class="fullscreen-banner__scroll-text">Défiler</span>
      <svg class="fullscreen-banner__scroll-arrow" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M12 5V19M12 19L5 12M12 19L19 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </div>
  {%- endif -%}
</div>

