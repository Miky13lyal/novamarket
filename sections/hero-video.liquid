    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "options": [
        {
          "value": "flex-start",
          "label": "Gauche"
        },
        {
          "value": "center",
          "label": "Centre"
        },
        {
          "value": "flex-end",
          "label": "Droite"
        }
      ],
      "default": "center",
      "label": "Alignement du texte"
    },
    {
      "type": "select",
      "id": "button_alignment",
