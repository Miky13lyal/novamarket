        {
          "value": "flex-start",
          "label": "Gauche"
        },
        {
          "value": "center",
          "label": "Centre"
        },
        {
          "value": "flex-end",
          "label": "Droite"
        }
      ],
      "default": "center",
      "label": "Alignement des boutons"
    },
    {
      "type": "range",
      "id": "content_width",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Largeur du contenu",
      "default": 80
    },
    {
      "type": "range",
      "id": "section_height",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "vh",
      "label": "Hauteur de la section",
      "default": 80
    },
    {
      "type": "range",
      "id": "min_height",
      "min": 300,
      "max": 1000,
      "step": 50,
      "unit": "px",
      "label": "Hauteur minimale",
      "default": 600
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Couleur du texte",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Couleur de l'overlay",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 1,
      "step": 0.1,
