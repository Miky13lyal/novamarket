    },
    {
      "type": "header",
      "content": "Boutons"
    },
    {
      "type": "text",
      "id": "button_label_1",
      "default": "Bouton principal",
      "label": "Label du bouton principal"
    },
    {
      "type": "url",
      "id": "button_link_1",
      "label": "Lien du bouton principal"
    },
    {
      "type": "text",
      "id": "button_label_2",
      "default": "En savoir plus",
      "label": "Label du bouton secondaire"
    },
    {
      "type": "url",
      "id": "button_link_2",
      "label": "Lien du bouton secondaire"
    },
    {
      "type": "header",
      "content": "Médias"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image de secours",
      "info": "S'affiche si la vidéo ne peut pas être chargée"
    },
    {
