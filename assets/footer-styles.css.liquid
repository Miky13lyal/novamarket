/* Modern Footer Styles */
.footer {
  --footer-bg: #1a1a1a;
  --footer-text: #ffffff;
  --footer-link: #ffffff;
  --footer-link-hover: #4a90e2;
  --footer-accent: #4a90e2;
  --footer-border: rgba(255, 255, 255, 0.1);
  
  background: var(--footer-bg);
  color: var(--footer-text);
  padding: 4rem 0 2rem;
  font-size: 0.9375rem;
  line-height: 1.6;
  font-family: 'Inter', sans-serif;
}

.footer a {
  color: var(--footer-link);
  text-decoration: none;
  transition: all 0.2s ease;
}

.footer a:hover {
  color: var(--footer-link-hover);
  opacity: 0.9;
}

/* Footer Content */
.footer__content {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
}

/* Footer Grid */
.footer__grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 2.5rem;
  margin-bottom: 3rem;
}

/* Footer Columns */
.footer__column h3 {
  color: var(--footer-text);
  font-size: 1.125rem;
  margin-bottom: 1.5rem;
  font-weight: 600;
  position: relative;
  padding-bottom: 0.75rem;
}

.footer__column h3::after {
  content: '';
  position: absolute;
  left: 0;
  bottom: 0;
  width: 40px;
  height: 2px;
  background: var(--footer-accent);
}

/* Footer Menu */
.footer__menu {
  list-style: none;
  padding: 0;
  margin: 0;
}

.footer__menu li {
  margin-bottom: 0.75rem;
}

/* Newsletter Section */
.footer__newsletter {
  background: rgba(255, 255, 255, 0.05);
  padding: 1.5rem;
  border-radius: 8px;
}

.footer__newsletter p {
  margin-bottom: 1rem;
}

.footer__newsletter-form {
  display: flex;
  gap: 10px;
}

.footer__newsletter-input {
  flex: 1;
  padding: 0.75rem 1rem;
  border: 1px solid var(--footer-border);
  background: rgba(255, 255, 255, 0.05);
  color: var(--footer-text);
  border-radius: 4px;
}

.footer__newsletter-button {
  background: var(--footer-accent);
  color: #fff;
  border: none;
  padding: 0 1.5rem;
  border-radius: 4px;
  cursor: pointer;
  transition: all 0.2s ease;
}

.footer__newsletter-button:hover {
  background: color-mix(in srgb, var(--footer-accent), #000 10%);
  transform: translateY(-1px);
}

/* Social Icons */
.footer__social {
  display: flex;
  gap: 1rem;
  margin-top: 1.5rem;
}

.footer__social a {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 36px;
  height: 36px;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  transition: all 0.2s ease;
}

.footer__social a:hover {
  background: var(--footer-accent);
  transform: translateY(-2px);
}

/* Bottom Bar */
.footer__bottom {
  margin-top: 3rem;
  padding: 1.5rem 0;
  border-top: 1px solid var(--footer-border);
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
  text-align: center;
}

.footer__copyright {
  font-size: 0.875rem;
  opacity: 0.7;
}

/* Payment Icons */
.footer__payment {
  display: flex;
  justify-content: center;
  gap: 1rem;
  flex-wrap: wrap;
}

.footer__payment-item {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 50px;
  height: 30px;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 4px;
  padding: 0.25rem;
}

/* Responsive */
@media (min-width: 750px) {
  .footer__bottom {
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    text-align: left;
  }
  
  .footer__payment {
    justify-content: flex-end;
  }
}

/* Animations */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.footer__column {
  animation: fadeInUp 0.6s ease-out forwards;
  opacity: 0;
}

.footer__column:nth-child(1) { animation-delay: 0.1s; }
.footer__column:nth-child(2) { animation-delay: 0.2s; }
.footer__column:nth-child(3) { animation-delay: 0.3s; }
.footer__column:nth-child(4) { animation-delay: 0.4s; }
